{
  "projects": [
    {
      "name": "ggwifi-admin-portal",
      "framework": "vite",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "rootDirectory": "Frontend/admin_portal",
      "environmentVariables": {
        "VITE_API_BASE_URL": "https://api.ggwifi.co.tz/api/v1",
        "VITE_APP_NAME": "GGWIFI Admin Portal",
        "VITE_APP_DOMAIN": "admin.ggwifi.co.tz",
        "VITE_ENVIRONMENT": "production"
      },
      "customDomain": "admin.ggwifi.co.tz",
      "nodeVersion": "18"
    },
    {
      "name": "ggwifi-customer-portal",
      "framework": "vite",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "rootDirectory": "Frontend/customer_portal",
      "environmentVariables": {
        "VITE_API_URL": "https://api.ggwifi.co.tz/api/v1",
        "VITE_APP_NAME": "GGWIFI Customer Portal",
        "VITE_APP_DOMAIN": "connect.ggwifi.co.tz",
        "VITE_ENVIRONMENT": "production"
      },
      "customDomain": "portal.ggwifi.co.tz",
      "nodeVersion": "18"
    },
    {
      "name": "ggwifi-main-website",
      "framework": "vite",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "rootDirectory": "Frontend/main_website",
      "environmentVariables": {
        "VITE_API_BASE_URL": "https://api.ggwifi.co.tz/api/v1",
        "VITE_APP_NAME": "GGWIFI",
        "VITE_APP_DOMAIN": "www.ggwifi.co.tz",
        "VITE_ENVIRONMENT": "production"
      },
      "customDomain": "www.ggwifi.co.tz",
      "nodeVersion": "18"
    }
  ],
  "staging": {
    "admin": {
      "domain": "admin-dev.ggwifi.co.tz",
      "apiUrl": "https://api-dev.ggwifi.co.tz/api/v1"
    },
    "customer": {
      "domain": "portal-dev.ggwifi.co.tz",
      "apiUrl": "https://api-dev.ggwifi.co.tz/api/v1"
    },
    "website": {
      "domain": "dev.ggwifi.co.tz",
      "apiUrl": "https://api-dev.ggwifi.co.tz/api/v1"
    }
  }
}
